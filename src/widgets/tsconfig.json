{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@api/*": [
        "../api/*"
      ],
      "@assets/*": [
        "../assets/*"
      ],
      "@components/*": [
        "../components/*"
      ],
      "@constants/*": [
        "../constants/*"
      ],
      "@containers/*": [
        "../containers/*"
      ],
      "@lib/*": [
        "../lib/*"
      ],
      "@pages/*": [
        "../pages/*"
      ],
      "@slices/*": [
        "../slices/*"
      ],
      "@styles/*": [
        "../styles/*"
      ],
    },
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": [
    "**/*.ts", 
    "**/*.tsx", 
  ],
  "exclude": ["node_modules"]
}
